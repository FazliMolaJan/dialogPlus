<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--  Customize your theme here.  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="ToolBarTheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="title_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@string/bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="button_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@string/book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <string name="bold" translatable="false" type="font">fonts/GothamBold.ttf</string>
    <string name="book" translatable="false" type="font">fonts/GothamBook.ttf</string>
</resources>
