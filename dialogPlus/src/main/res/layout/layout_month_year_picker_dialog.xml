<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isMonthPicker"
            type="boolean" />

        <variable
            name="model"
            type="com.dialog.plus.ui.DialogUiModel" />
    </data>

    <carbon.widget.LinearLayout
        android:layout_width="@dimen/_200sdp"
        android:background="@color/carbon_white"
        android:gravity="center"
        app:carbon_cornerRadius="@dimen/dialog_corner_radius"
        app:dialog_width_percent="@{@integer/dialog_month_year_width_percent}"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/headerLayout"
            layout="@layout/layout_dialog_header"
            app:model="@{model}" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <NumberPicker
                android:theme="@style/dialog_month_year_picker_text_style"
                android:id="@+id/picker"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dialog_action_seperator" />

        <carbon.widget.Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_action_buttons_height"
            android:layout_gravity="center"
            android:text="@string/dialog_ok_text"
            android:textColor="@color/dialog_month_year_action_text_color"
            android:textAppearance="@style/dialog_positive_button_style"
            android:background="@color/dialog_month_year_action_background" />

    </carbon.widget.LinearLayout>
</layout>