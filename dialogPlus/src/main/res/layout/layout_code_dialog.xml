<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.dialog.plus.ui.DialogUiModel" />


    </data>

    <carbon.widget.LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/carbon_white"
        android:orientation="vertical"
        bind:carbon_cornerRadius="@dimen/dialog_corner_radius"
        bind:dialog_width_percent="@{@integer/dialog_width_percent}"
        tools:visibility="visible">

        <include
            android:id="@+id/headerLayout"
            layout="@layout/layout_dialog_header"
            bind:model="@{model}" />

        <me.grantland.widget.AutofitTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dialog_content_margin"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/dialog_content_margin"
            android:gravity="center"
            android:maxLines="1"
            android:text="@{model.content}"
            android:textColor="@color/dialogContentTextColor"
            android:textStyle="bold" />

        <com.dialog.plus.ui.PinEntryEditText
            android:id="@+id/txtPinEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_8sdp"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="@{model.correctCode.length()}"
            android:text="@={model.codeEntry}"
            android:textIsSelectable="false"
            android:textSize="@dimen/_16ssp"
            bind:charsNumber="@{model.correctCode.length()}" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="@{model.timeLeft>0?model.timeLeft+``:@string/dialog_time_up}"
            android:textColor="@color/dialogTimeUpTextColor"
            android:textSize="@dimen/dialog_timeup_text_size"
            bind:visible="@{model.withCounter}" />

        <carbon.widget.Button
            android:id="@+id/sendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:background="@color/dialog_send_background"
            android:text="@string/dialog_confirm"
            android:textAllCaps="false"
            android:textColor="@color/carbon_white"
            bind:background_color="@{model.positiveBackground}"
            bind:background_drawable="@{model.positiveBgDrawable}"
            bind:carbon_cornerRadius="@dimen/dialog_corner_radius"
            bind:visible="@{model.withSend &amp; model.codeEntry.length==model.correctCode.length}" />

        <carbon.widget.TextView
            android:id="@+id/resendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_16sdp"
            android:text="@string/dialog_resend"
            android:textColor="@color/dialog_resend_text_color"
            bind:text_color="@{model.positiveBackground}"
            bind:underline="@{true}"
            bind:visible="@{!model.withCounter || (model.withResend &amp; model.timeLeft==0)}" />

    </carbon.widget.LinearLayout>
</layout>