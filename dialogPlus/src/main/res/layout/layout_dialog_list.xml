<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.dialog.plus.ui.DialogUiModel" />
    </data>

    <carbon.widget.LinearLayout
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/dialog_white"
        android:gravity="center"
        android:orientation="vertical"
        app:carbon_cornerRadius="@dimen/dialog_corner_radius"
        app:dialog_width_percent="@{@integer/dialog_width_percent}"
        tools:visibility="visible">

        <include
            android:id="@+id/headerLayout"
            layout="@layout/layout_dialog_header"
            app:model="@{model}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp" />

    </carbon.widget.LinearLayout>
</layout>